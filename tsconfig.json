{
  "compilerOptions": {
    /* Base Options: */
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "esnext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    /* If NOT transpiling with TypeScript: */
    "moduleResolution": "Node",
    "module": "ESNext",
    "noEmit": true,
    /* If your code runs in the DOM: */
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "typeRoots": [
      "./typings",
      "./node_modules/@types/"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "dist/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}